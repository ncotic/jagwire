{{!< default}}
{{!-- The tag above means: insert everything in this file into the body of the default.hbs template --}}

{{!-- Use Magazine header format for tag pages --}}
{{> "components/header" headerStyle="Magazine"}}

{{!-- Featured posts for this tag (optional - you can remove this section if you don't want featured posts on tag pages) --}}
{{#match @custom.header_style "!=" "Highlight"}}
    {{#get "posts" filter="tag:{{slug}}+featured:true" limit="4" as |featured_posts|}}
        {{#if featured_posts}}
            {{> "components/featured" posts=featured_posts limit=4}}
        {{/if}}
    {{/get}}
{{/match}}

{{!-- CTA component (same as homepage) --}}
{{> "components/cta"}}

{{!-- Post list with the exact same formatting as homepage --}}
{{> "components/post-list" feed="tag" postFeedStyle=@custom.post_feed_style showTitle=true showSidebar=@custom.show_publication_info_sidebar}}